<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp">

    <TextView
        android:id="@+id/txt_lecture_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/error_message"
        android:textColor="@color/icon_black"
        android:textSize="20sp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/txt_room_nr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_lecture_title"
        android:text="WH C666"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_lecture_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_lecture_title"
        android:layout_marginLeft="4dp"
        android:layout_toEndOf="@+id/txt_lecture_spacer"
        android:text="@string/error_message" />

    <TextView
        android:id="@+id/txt_lecture_spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_lecture_title"
        android:layout_toEndOf="@+id/txt_room_nr"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:text="|" />

</RelativeLayout>