<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
<!--    "Theme.AppCompat.Light"-->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightGrey</item>
        <item name="colorPrimaryDark">@color/lightGrey</item>
        <item name="colorAccent">@color/icon_black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/lightGrey</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightGrey</item>
        <item name="colorPrimaryDark">@color/lightGrey</item>
        <item name="colorAccent">@color/icon_black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/lightGrey</item>
    </style>

    <style name="NoActionBarWhiteNavigationBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/standardBackground</item>
        <item name="colorPrimaryDark">@color/standardBackground</item>
        <item name="colorAccent">@color/icon_black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/standardBackground</item>
    </style>

</resources>


